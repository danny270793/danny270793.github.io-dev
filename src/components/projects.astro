---
import { Image } from "astro:assets";
import ProjectsBackground from "../../public/images/parallax/projects.jpg";
import GooglePlay from "../../public/images/projects/google-play.png";
import AppStore from "../../public/images/projects/app-store.png";
import projects, { Project } from "../libraries/me/knowledges/projects";
---
<div
      id="projects"
      class="parallax separator w3-display-container"
      style={`background-image: url("${ProjectsBackground.src}")`}
    >
      <div class="w3-display-middle no-spaces">
        <span
          class="w3-center w3-padding w3-black w3-xlarge w3-wide w3-animate-opacity"
        >
          Projects
        </span>
      </div>
    </div>
    <div class="w3-content w3-container w3-padding-64">
      {
        projects.chunk(2).map((projects: Project[]) => (
          <div class="w3-row">
            {projects.map((project: Project) => (
              <div class="w3-half w3-padding">
                <div class="w3-row" style="display: flex; align-items: center;">
                  <div class="w3-third">
                    <Image
                      src={project.image}
                      alt={project.name}
                      style="width: auto; height: 100px"
                    />
                  </div>
                  <div class="w3-twothird">
                    <h5>
                      <strong>{project.name}</strong>
                    </h5>
                    <p>{project.description}</p>
                    {project.playstore !== undefined ? (
                      <a href={project.playstore} target="_blank">
                        <Image
                          class="w3-hover-shadow"
                          src={GooglePlay}
                          alt={project.name}
                          style="width: auto; height: 30px;"
                        />
                      </a>
                    ) : (
                      <span />
                    )}
                    {project.appstore !== undefined ? (
                      <a href={project.appstore} target="_blank">
                        <Image
                          class="w3-hover-shadow"
                          src={AppStore}
                          alt={project.name}
                          style="width: auto; height: 30px;"
                        />
                      </a>
                    ) : (
                      <span />
                    )}
                  </div>
                </div>
              </div>
            ))}
          </div>
        ))
      }
    </div>