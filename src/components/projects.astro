---
import { Image } from "astro:assets";
import ProjectsBackground from "../images/parallax/projects.jpg";
import GooglePlay from "../images/projects/google-play.png";
import AppStore from "../images/projects/app-store.png";
import MyProjects from "../libraries/me/knowledges/projects";
import type { Project } from "../libraries/me/knowledges/projects";
import Github from "../images/projects/github.png";
---

<!-- Projects Hero Section -->
<section class="projects-hero parallax separator" style={`background-image: url("${ProjectsBackground.src}")`}>
  <div class="hero-overlay"></div>
  <div class="hero-content animate-fade-in-up">
    <h2 class="section-hero-title">Projects</h2>
    <p class="section-hero-subtitle">Innovation in action - Building solutions that make a difference</p>
  </div>
</section>

<!-- Projects Content Section -->
<section id="projects" class="section-modern">
  <div class="container">
    <div class="section-header scroll-animate">
      <h2 class="section-title">Featured Projects</h2>
      <p class="section-subtitle">
        A collection of innovative solutions showcasing expertise across platforms and technologies
      </p>
    </div>
    
    <!-- Project Cards Grid -->
    <div class="projects-grid">
      {MyProjects.map((project: Project, index) => (
        <div class={`project-card modern-card hover-lift scroll-animate animate-delay-${index * 100}`}>
          <div class="project-image-container">
            <div class="project-image image-hover">
              <Image
                src={project.image}
                alt={project.name}
                class="project-img"
              />
              <div class="project-overlay">
                <div class="project-category">
                  <i class="fas fa-rocket"></i>
                  <span>Project</span>
                </div>
              </div>
            </div>
          </div>
          
          <div class="project-content">
            <h3 class="project-title">{project.name}</h3>
            <p class="project-description">{project.description}</p>
            
            <div class="project-actions">
              {project.playstore && (
                <a href={project.playstore} target="_blank" class="project-link hover-scale" title="Google Play Store">
                  <Image
                    src={GooglePlay}
                    alt="Google Play Store"
                    class="store-badge"
                  />
                </a>
              )}
              
              {project.appstore && (
                <a href={project.appstore} target="_blank" class="project-link hover-scale" title="Apple App Store">
                  <Image
                    src={AppStore}
                    alt="Apple App Store"
                    class="store-badge"
                  />
                </a>
              )}
              
              {project.github && (
                <a href={project.github} target="_blank" class="project-link hover-scale" title="GitHub Repository">
                  <Image
                    src={Github}
                    alt="GitHub Repository"
                    class="store-badge"
                  />
                </a>
              )}
            </div>
            
            <div class="project-footer">
              <div class="project-status">
                <span class="status-badge live">Live</span>
              </div>
              <div class="project-tech">
                <i class="fas fa-code"></i>
                <span>Multi-platform</span>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Call to Action -->
    <div class="projects-cta scroll-animate">
      <div class="cta-content">
        <h3>Interested in working together?</h3>
        <p>Let's discuss how we can bring your ideas to life with innovative solutions.</p>
        <div class="cta-actions">
          <a href="#contact" class="btn-modern btn-primary">
            <i class="fas fa-envelope"></i>
            Get In Touch
          </a>
          <a href="#technologies" class="btn-modern btn-outline">
            <i class="fas fa-cogs"></i>
            View Technologies
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
