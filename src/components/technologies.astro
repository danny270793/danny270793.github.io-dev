---
import TechnologiesBackground from "../images/parallax/technologies.jpg";
import MyTechnologies, {
  Technology,
} from "../libraries/me/knowledges/technologies";
---

<div
  id="technologies"
  class="parallax separator w3-display-container"
  style={`background-image: url("${TechnologiesBackground.src}")`}
>
  <div class="w3-display-middle no-spaces">
    <span
      class="w3-center w3-padding w3-black w3-xlarge w3-wide w3-animate-opacity"
    >
      Technologies
    </span>
  </div>
</div>

<div class="w3-content w3-container w3-padding-64">
  {
    [...new Set(MyTechnologies.map((e: Technology) => e.category))].map(
      (category) => (
        <>
          <h5>
            <strong>{category}</strong>
          </h5>

          {MyTechnologies.filter(
            (t: Technology) => t.category === category,
          ).map((technology: Technology) => (
            <span>
              <img src={technology.link} alt={technology.alternative} />
              &nbsp;
            </span>
          ))}
        </>
      ),
    )
  }
</div>
