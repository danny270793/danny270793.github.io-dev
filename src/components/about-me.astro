---
import { Image } from "astro:assets";
import Me from "../libraries/me";
import profilePicture from "../images/profile.jpg";
import headerBackground from "../images/parallax/header.jpg";
---

<!-- Hero Section -->
<section class="hero-modern parallax header" style={`background-image: url("${headerBackground.src}")`}>
  <div class="hero-overlay"></div>
  
  <!-- Floating Elements -->
  <div class="floating-elements">
    <div class="floating-icon animate-float" style="top: 15%; left: 10%; animation-delay: 0s;">
      <i class="fas fa-code"></i>
    </div>
    <div class="floating-icon animate-float" style="top: 60%; right: 15%; animation-delay: 2s;">
      <i class="fas fa-laptop-code"></i>
    </div>
    <div class="floating-icon animate-float" style="bottom: 30%; left: 20%; animation-delay: 4s;">
      <i class="fas fa-rocket"></i>
    </div>
    <div class="floating-icon animate-float" style="top: 40%; right: 25%; animation-delay: 6s;">
      <i class="fas fa-brain"></i>
    </div>
  </div>

  <div class="hero-content animate-fade-in-up">
    <h1 class="hero-title text-gradient animate-fade-in-up animate-delay-200">
      Danny Vaca
    </h1>
    <p class="hero-subtitle animate-fade-in-up animate-delay-500">
      Senior Full Stack Developer & Cloud Architect
    </p>
    <p class="hero-description animate-fade-in-up animate-delay-700">
      Transforming ideas into innovative digital solutions with cutting-edge technology
    </p>
    
    <div class="hero-actions animate-fade-in-up animate-delay-1000">
      <a href="#about-me" class="btn-modern btn-primary">
        <i class="fas fa-user"></i>
        Learn More About Me
      </a>
      <a href="#projects" class="btn-modern btn-outline">
        <i class="fas fa-rocket"></i>
        View My Projects
      </a>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="scroll-indicator animate-bounce">
    <p>Scroll to explore</p>
    <i class="fas fa-chevron-down"></i>
  </div>
</section>

<!-- About Me Section -->
<section id="about-me" class="section-modern">
  <div class="container">
    <div class="section-header scroll-animate">
      <h2 class="section-title">About Me</h2>
      <p class="section-subtitle">
        Passionate about creating innovative solutions and pushing the boundaries of technology
      </p>
    </div>
    
    <div class="about-grid">
      <!-- Profile Card -->
      <div class="profile-card modern-card scroll-animate-left hover-lift">
        <div class="profile-image-container">
          <Image
            class="profile-image"
            src={profilePicture}
            alt="Danny Vaca - Profile Picture"
          />
          <div class="profile-decoration">
            <div class="decoration-circle"></div>
            <div class="decoration-circle"></div>
          </div>
        </div>
        
        <div class="profile-info">
          <h3 class="profile-name text-gradient">Danny Vaca</h3>
          <p class="profile-title">Senior Full Stack Developer</p>
          
          <div class="profile-stats">
            <div class="stat">
              <span class="stat-number">15+</span>
              <span class="stat-label">Years Experience</span>
            </div>
            <div class="stat">
              <span class="stat-number">50+</span>
              <span class="stat-label">Projects Completed</span>
            </div>
            <div class="stat">
              <span class="stat-number">25+</span>
              <span class="stat-label">Certifications</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- About Content -->
      <div class="about-content scroll-animate-right">
        <div class="about-text">
          {Me.detail.split("\n").map((paragraph, index) => (
            <p class={`scroll-animate animate-delay-${index * 200}`}>{paragraph}</p>
          ))}
        </div>
        
        <div class="skills-preview scroll-animate">
          <h4>Core Expertise</h4>
          <div class="skill-tags">
            <span class="tech-badge hover-scale">
              <i class="fab fa-js-square"></i>
              JavaScript
            </span>
            <span class="tech-badge hover-scale">
              <i class="fab fa-python"></i>
              Python
            </span>
            <span class="tech-badge hover-scale">
              <i class="fab fa-java"></i>
              Java
            </span>
            <span class="tech-badge hover-scale">
              <i class="fab fa-aws"></i>
              AWS
            </span>
            <span class="tech-badge hover-scale">
              <i class="fab fa-microsoft"></i>
              Azure
            </span>
            <span class="tech-badge hover-scale">
              <i class="fas fa-mobile-alt"></i>
              Mobile Development
            </span>
          </div>
        </div>
        
        <div class="about-actions scroll-animate">
          <a href="#certifications" class="btn-modern btn-primary">
            <i class="fas fa-certificate"></i>
            View Certifications
          </a>
          <a href="#contact" class="btn-modern btn-secondary">
            <i class="fas fa-envelope"></i>
            Get In Touch
          </a>
        </div>
      </div>
    </div>
    
    <!-- Achievement Cards -->
    <div class="achievements-grid scroll-animate">
      <div class="achievement-card modern-card hover-lift">
        <div class="achievement-icon">
          <i class="fas fa-cloud"></i>
        </div>
        <h4>Cloud Architecture</h4>
        <p>Expert in designing scalable cloud solutions on Azure and AWS platforms</p>
      </div>
      
      <div class="achievement-card modern-card hover-lift">
        <div class="achievement-icon">
          <i class="fas fa-mobile-alt"></i>
        </div>
        <h4>Cross-Platform Development</h4>
        <p>Building mobile applications with Flutter, React Native, and Cordova</p>
      </div>
      
      <div class="achievement-card modern-card hover-lift">
        <div class="achievement-icon">
          <i class="fas fa-cogs"></i>
        </div>
        <h4>Microservices Architecture</h4>
        <p>Implementing robust microservices with Java, .NET, and Python</p>
      </div>
    </div>
  </div>
</section>
