---
import { Image } from "astro:assets";
import Me from "../libraries/me";
import profilePicture from "../images/profile.jpg";
import headerBackground from "../images/parallax/header.jpg";
---

<!-- Enhanced Hero Section -->
<section class="hero-modern parallax header" style={`background-image: url("${headerBackground.src}")`}>
  <div class="hero-overlay"></div>
  
  <!-- Floating Tech Icons -->
  <div class="floating-elements">
    <div class="floating-icon animate-float" style="top: 15%; left: 8%; animation-delay: 0s;">
      <i class="fas fa-code"></i>
    </div>
    <div class="floating-icon animate-float" style="top: 70%; right: 12%; animation-delay: 2s;">
      <i class="fas fa-laptop-code"></i>
    </div>
    <div class="floating-icon animate-float" style="bottom: 25%; left: 15%; animation-delay: 4s;">
      <i class="fas fa-rocket"></i>
    </div>
    <div class="floating-icon animate-float" style="top: 35%; right: 20%; animation-delay: 6s;">
      <i class="fas fa-cloud"></i>
    </div>
    <div class="floating-icon animate-float" style="top: 60%; left: 25%; animation-delay: 8s;">
      <i class="fas fa-mobile-alt"></i>
    </div>
  </div>

  <div class="hero-content animate-fade-in-up">
    <h1 class="hero-title animate-fade-in-up animate-delay-200">
      Danny Vaca
    </h1>
    <p class="hero-subtitle animate-fade-in-up animate-delay-500">
      Senior Full Stack Developer & Cloud Architect
    </p>
    <p class="hero-description animate-fade-in-up animate-delay-700">
      Transforming complex challenges into elegant solutions with 15+ years of expertise
    </p>
    
    <div class="hero-actions animate-fade-in-up animate-delay-1000">
      <a href="#about-me" class="btn-modern btn-primary">
        <i class="fas fa-user"></i>
        Discover My Journey
      </a>
      <a href="#projects" class="btn-modern btn-outline">
        <i class="fas fa-rocket"></i>
        Explore Projects
      </a>
    </div>
  </div>
  
  <!-- Animated Scroll Indicator -->
  <div class="scroll-indicator animate-bounce">
    <p>Scroll to explore</p>
    <i class="fas fa-chevron-down"></i>
  </div>
</section>

<!-- Beautiful About Me Section -->
<section id="about-me" class="about-section">
  <div class="container">
    <!-- Section Header -->
    <div class="section-header scroll-animate">
      <h2 class="section-title">About Me</h2>
      <p class="section-subtitle">
        Passionate developer dedicated to crafting exceptional digital experiences
      </p>
    </div>
    
    <div class="about-grid">
      <!-- Enhanced Profile Card -->
      <div class="profile-card modern-card scroll-animate-left hover-lift">
        <div class="profile-image-container">
          <Image
            class="profile-image"
            src={profilePicture}
            alt="Danny Vaca - Senior Full Stack Developer"
          />
          <div class="profile-decoration">
            <div class="decoration-circle"></div>
            <div class="decoration-circle"></div>
          </div>
          <div class="profile-badge">
            <i class="fas fa-certificate"></i>
            <span>Certified Expert</span>
          </div>
        </div>
        
        <div class="profile-info">
          <h3 class="profile-name text-gradient">Danny Vaca</h3>
          <p class="profile-title">Senior Full Stack Developer</p>
          <div class="profile-location">
            <i class="fas fa-map-marker-alt"></i>
            <span>Available Globally</span>
          </div>
          
          <!-- Quick Stats -->
          <div class="profile-stats">
            <div class="stat">
              <span class="stat-number" data-count="15">0</span>
              <span class="stat-label">Years Experience</span>
            </div>
            <div class="stat">
              <span class="stat-number" data-count="50">0</span>
              <span class="stat-label">Projects Delivered</span>
            </div>
            <div class="stat">
              <span class="stat-number" data-count="25">0</span>
              <span class="stat-label">Certifications</span>
            </div>
          </div>
          
          <!-- Contact Buttons -->
          <div class="profile-actions">
            <a href="#contact" class="btn-modern btn-primary btn-sm">
              <i class="fas fa-envelope"></i>
              Get In Touch
            </a>
            <a href="/resume.pdf" class="btn-modern btn-outline btn-sm" target="_blank">
              <i class="fas fa-download"></i>
              Resume
            </a>
          </div>
        </div>
      </div>
      
      <!-- Enhanced About Content -->
      <div class="about-content scroll-animate-right">
        <div class="about-text">
          {Me.detail.split("\n").map((paragraph, index) => (
            <p class={`scroll-animate animate-delay-${index * 200}`}>
              {paragraph}
            </p>
          ))}
        </div>
        
        <!-- Core Expertise Section -->
        <div class="expertise-section scroll-animate animate-delay-500">
          <h4 class="expertise-title">
            <i class="fas fa-star"></i>
            Core Expertise
          </h4>
          <div class="expertise-grid">
            <div class="expertise-item">
              <div class="expertise-icon">
                <i class="fas fa-cloud"></i>
              </div>
              <div class="expertise-content">
                <h5>Cloud Architecture</h5>
                <p>Azure & AWS Solutions</p>
              </div>
            </div>
            
            <div class="expertise-item">
              <div class="expertise-icon">
                <i class="fas fa-mobile-alt"></i>
              </div>
              <div class="expertise-content">
                <h5>Mobile Development</h5>
                <p>Flutter & React Native</p>
              </div>
            </div>
            
            <div class="expertise-item">
              <div class="expertise-icon">
                <i class="fas fa-cogs"></i>
              </div>
